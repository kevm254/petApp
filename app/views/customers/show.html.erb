<table class="table">
  <thead>
  <tr>
    <th>First Name</th>
    <th>Last Name</th>
    <th>Contact Number</th>
  </tr>
  </thead>

  <tbody>
  <row>
    <td><%= @customer.first_name %></td>
    <td><%= @customer.last_name %></td>
    <td><%= @customer.full_phone_number %></td>
  </row>
  </tbody>
</table>
<br><br>


<table class="table striped">
  <thead>
  <tr>
    <th>Pets</th>
    <th>Appointment Information</th>
  </tr>
  </thead>

  <tbody>
  <% @customer_pets.each do |pet| %>
    <tr>
      <td><%= link_to "#{pet.name}", pet_path(pet) %></td>
      <td><% apt = Appointment.where(pet_id: pet.id) %>
          <% apt.each do |apt| %>
          - Apt scheduled for <strong><%= apt.date_of_visit_f.to_s %></strong>
            with <strong>Dr. <%= apt.doctor.last_name %></strong>

          due to following reason: <em><%= apt.visit_reason%></em>
          <br>
          <% end %>
      </td>
  </tr>
  <% end %>
  </tbody>
</table>


<br><% link_to 'Go Back', customers_path %>