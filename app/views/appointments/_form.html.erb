<div class="form-group">
  <%= f.label :date_of_visit, 'Date of Visit', class: 'control-label' %>
  <%= f.date_field :date_of_visit, class: 'form-control' %>
</div>

<div class="form-group">
  <%= f.label :appointment_reminder, 'Appointment Reminder', class: 'control-label' %>
  <%= f.check_box :appointment_reminder, class: 'checkbox' %>
</div>

<div class="form-group">
  <%= f.label :visit_reason, 'Visit Reason', class: 'control-label' %>
  <%= f.text_field :visit_reason, class: 'form-control' %>
</div>

<%= f.submit class: 'btn btn-success' %>

