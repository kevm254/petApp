<%= render partial: 'appointments/errors' %>

<div class="form-group">
  <%= f.label :pet_id, 'Schedule a Pet', class: 'control-label'  %>
  <div class="controls">
    <%= collection_select(:appointment, :pet_id, Pet.all, :id, :pet_and_owner_name) %>
  </div>
</div>


<div class="form-group">
  <%= f.label :doctor_id, 'Assign a Doctor', class: 'control-label'  %>
  <div class="controls">
    <%= collection_select(:appointment, :doctor_id, Doctor.all, :id, :full_name) %>
  </div>
</div>


<div class="form-group">
  <%= f.label :date_of_visit, 'Appointment Date', class: 'control-label' %>
  <%= f.date_field :date_of_visit, class: 'form-control' %>
</div>

<div class="form-group">
  <%= f.label :visit_reason, 'Visit Reason', class: 'control-label' %>
  <%= f.text_field :visit_reason, class: 'form-control' %>
</div>

<%= f.submit class: 'btn btn-success' %>

