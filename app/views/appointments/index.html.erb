<h1 class="text-center"> List All Appointments </h1>
<span class="pull-right"><%= link_to 'Add Appointment', new_appointment_path, class: 'btn btn-success' %></span>


<ul>
  <table class="table table-striped">

    <thead>
    <tr>
      <th>Customer</th>
      <th>Pet</th>
      <th>Assigned Doctor</th>
      <th>Visit Date</th>
      <th>Visit Reason</th>
      <th>Appt Reminder</th>
      <th class="text-center">Actions</th>
    </tr>
    </thead>

    <tbody>
    <% @appointments.each do |appt|%>
        <tr>
          <td> <%= appt.pet.customer.full_name %></td>
          <td> <%= appt.pet.name %></td>
          <td> <%= appt.doctor.full_name %></td>
          <td> <%= appt.date_of_visit_f %></td>
          <td> <%= appt.visit_reason %></td>
          <td> <%= appt.reminder %></td>
          <td class="text-center">
            <%= link_to 'More Info', appointment_path(appt), class: 'btn btn-primary' %>
            <%= link_to 'Edit', edit_appointment_path(appt), class: 'btn btn-success' %>
            <%= link_to ' Delete', appointment_path(appt), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
        </tr>
    <% end %>
    </tbody>

  </table>

</ul>

