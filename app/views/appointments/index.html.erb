<h1 class="text-center"> List All Appointments </h1>

<ul>
  <table class="table table-striped">

    <thead>
    <tr>
      <th>Customer</th>
      <th>Pet</th>
      <th>Assigned Doctor</th>
      <th>Apt Date</th>
      <th>Visit Reason</th>
      <th>Appt Reminder</th>
      <th class="text-center"><%= link_to '', new_appointment_path, class: 'btn btn-success glyphicon glyphicon-plus' %></th>
    </tr>
    </thead>

    <tbody>
    <% @appointments.each do |apt|%>
        <tr>
          <td> <%= apt.pet.customer.full_name %></td>
          <td> <%= apt.pet.name %></td>
          <td> <%= apt.doctor.full_name %></td>
          <td> <%= apt.date_of_visit_f %></td>
          <td> <%= apt.visit_reason %></td>
          <td> <%= apt.reminder %></td>
          <td class="text-center"><%= render partial: 'appointments/btn_actions', locals: { apt: apt } %></td>


        </tr>
    <% end %>
    </tbody>

  </table>

</ul>

