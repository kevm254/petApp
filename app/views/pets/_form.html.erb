<%= render partial: 'pets/errors' %>

<div class="form-group">
  <%= f.label :name, 'Name', class: 'control-label' %>
  <%= f.text_field :name, class: 'form-control' %>
</div>


<div class="form-group">
  <%= f.label :pet_type, 'Pet Type', class: 'control-label' %>
  <div class="controls">
      <%= f.select(:pet_type, options_for_select([['Bird', 'bird'],[ 'Cat', 'cat'], ['Dog', 'dog']])) %>
  </div>
</div>

<div class="form-group">
  <%= f.label :customer_id, 'Pet\'s Owner', class: 'control-label'  %>
  <div class="controls">
    <%= collection_select(:pet, :customer_id, Customer.all, :id, :full_name) %>
  </div>
</div>

<div class="form-group">
  <%= f.label :breed, 'Breed', class: 'control-label' %>
  <%= f.text_field :breed, class: 'form-control' %>
</div>

<div class="form-group">
  <%= f.label :age, 'Age', class: 'control-label' %>
  <%= f.number_field :age, class: 'form-control' %>
</div>

<div class="form-group">
  <%= f.label :weight, 'Weight', class: 'control-label' %>
  <%= f.number_field :weight, class: 'form-control' %>
</div>


<div class="form-group">
  <%= f.label :last_visited_date, 'Last Visited Date', class: 'control-label' %>
  <%= f.date_field :last_visited_date, class: 'form-control' %>
</div>




<%= f.submit class: 'btn btn-success' %>

