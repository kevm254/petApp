<h1 class="text-center">Listing all pets</h1>

<ul>
  <table class="table table-striped">

    <thead>
    <tr>
      <th>Name</th>
      <th>Type</th>
      <th>Breed</th>
      <th>Owner</th>
      <th>Next Apt Date</th>
      <th class="text-center"><%= link_to '', new_pet_path, class: 'btn btn-success glyphicon glyphicon-plus' %></th>

    </tr>
    </thead>

    <tbody>
    <% @pets.each do |pet|%>
        <tr>
          <td><%= pet.name %></td>
          <td><%= pet.pet_type %></td>
          <td><%= pet.breed %></td>
          <td><%= if pet.customer != nil then pet.customer.full_name end%></td>
          <td><%= pet.next_appointment_date_f %></td>
          <td class="text-center"><%= render partial: 'pets/btn_actions', locals: { pet: pet } %></td>

        </tr>
    <% end %>
    </tbody>

  </table>

</ul>
